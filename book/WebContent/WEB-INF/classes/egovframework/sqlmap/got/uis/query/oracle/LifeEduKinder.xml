<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="LifeEduKinder">
	
	<resultMap id="resultInfo" class="entityMap" >
		<result column="GID" property="GID"/>
		<result column="FTR_CDE" property="FTR_CDE"/>
		<result column="FTR_IDN" property="FTR_IDN"/>
		<result column="BJD_CDE" property="BJD_CDE"/>
		<result column="DET_ADR" property="DET_ADR"/>
		<result column="TEL_NUM" property="TEL_NUM"/>
		<result column="SCH_NAM" property="SCH_NAM"/>
		<result column="SCH_GBN" property="SCH_GBN"/>
		<result column="HOM_PAG" property="HOM_PAG"/>
		<result column="DET_EX1" property="DET_EX1"/>
		<result column="DET_EX2" property="DET_EX2"/>
		<result column="DET_EX3" property="DET_EX3"/>
		<result column="DET_EX4" property="DET_EX4"/>
		<result column="DET_EX5" property="DET_EX5"/>
	</resultMap> 
	
	<resultMap id="resultGbn" class="entityMap" >
		<result column="SCH_GBN" property="SCH_GBN"/>
	</resultMap> 	
	<select id="edu.LifeEduKinderL" parameterClass="entityMap" resultMap="resultInfo">
		
			SELECT
				*
			FROM(
				SELECT ROWNUM RNUM,TMP.* FROM(
					SELECT
						GID,
						FTR_CDE,
						FTR_IDN,
						BJD_CDE,
						DET_ADR,
						TEL_NUM,
						SCH_NAM,
						SCH_GBN,
						HOM_PAG,
						DET_EX1,
						DET_EX2,
						DET_EX3,
						DET_EX4,
						DET_EX5,
						THE_GEOM
					FROM LFL_SCHL_PS
					WHERE 1=1
						AND FTR_CDE = 'LF071'
						<isNotEmpty prepend="AND" property="bjdCde">
						BJD_CDE = #bjdCde#
						</isNotEmpty>
						<isNotEmpty prepend="AND" property="schGbn">
						SCH_GBN = #schGbn#
						</isNotEmpty>
						<isNotEmpty prepend="AND" property="schNam">
						SCH_NAM  Like '%' ||#schNam#|| '%'
						</isNotEmpty>
						ORDER BY FTR_IDN DESC
				) TMP
			)B
			<!-- <WHERE ROWNUM &lt;= #recordCountPerPage# and RNUM &gt; #firstIndex# -->		
	</select>	
	
	<select id="edu.LifeEduKinderC" parameterClass="entityMap" resultClass="int">
			SELECT
				COUNT(*)
			FROM LFL_SCHL_PS
			WHERE 1=1
				AND FTR_CDE = 'LF071'
				<isNotEmpty prepend="AND" property="bjdCde">
				BJD_CDE = #bjdCde#
				</isNotEmpty>
				<isNotEmpty prepend="AND" property="schGbn">
				SCH_GBN = #schGbn#
				</isNotEmpty>
				<isNotEmpty prepend="AND" property="schNam">
				SCH_NAM  Like '%' ||#schNam#|| '%'
				</isNotEmpty>
	</select>	
	
	<select id="edu.LifeEduKinderR" parameterClass="entityMap" resultMap="resultInfo">
		
			SELECT
				*
			FROM(
				SELECT ROWNUM RNUM,TMP.* FROM(
					SELECT
						GID,
						FTR_CDE,
						FTR_IDN,
						BJD_CDE,
						DET_ADR,
						TEL_NUM,
						SCH_NAM,
						SCH_GBN,
						HOM_PAG,
						DET_EX1,
						DET_EX2,
						DET_EX3,
						DET_EX4,
						DET_EX5,
						THE_GEOM
					FROM LFL_SCHL_PS
					WHERE 1=1
						AND FTR_CDE = 'LF071'
						<isNotEmpty prepend="AND" property="ftrIdn">
						FTR_IDN = #ftrIdn#
						</isNotEmpty>
						ORDER BY FTR_IDN DESC
				) TMP
			)B
			<!-- <WHERE ROWNUM &lt;= #recordCountPerPage# and RNUM &gt; #firstIndex# -->		
	</select>	
	
	<select id="edu.LifeEduKinderGbn" parameterClass="entityMap" resultMap="resultGbn">
			SELECT DISTINCT SCH_GBN
			FROM LFL_SCHL_PS
			WHERE 1=1
				<isNotEmpty prepend="AND" property="ftrIdn">
					FTR_IDN = #ftrIdn#
				</isNotEmpty>
	</select>	
	
	
</sqlMap>
